<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:layout_width="@dimen/item_memo_height"
        android:layout_height="@dimen/item_memo_height"
        android:src="@drawable/normal_memo"
        android:id="@+id/iv_memo"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="@dimen/item_memo_height"
        android:layout_toEndOf="@id/iv_memo"
        android:layout_marginStart="3dp"
        android:textSize="17sp"
        android:text="请添加您的第一个备忘"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_memo_height"
        android:layout_toEndOf="@id/tv_title">
        <ImageView
            android:layout_width="@dimen/item_memo_height"
            android:layout_height="@dimen/item_memo_height"
            android:src="@drawable/ic_edit_memo"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_edit"/>
    </RelativeLayout>
</RelativeLayout>