            android:id="@+id/re_tv1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="02-10"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/re_tv2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:gravity="center"
            android:text="多云"/>
        <TextView
            android:id="@+id/re_tv3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18dp"
